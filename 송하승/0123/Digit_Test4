package test_Prepare;

public class Digit_Test4 { // 직삼각형(오른편 직각)

	public static void main(String[] args) {
		int[] num = new int[15];
		int result = 0;

		for (int i = 0; i < 5; i++) { // 5행 출력
			for (int j = 0; j < 5 - i; j++) { // 숫자 출력을 위한 공백 생성
				System.out.print("   "); // 3칸 공백

			}

			for (int k = 0; k <= i; k++) { // 1행부터 5행까지 숫자의 개수(1, 2, 3, 4, 5)
				result += 1;
				num[i] = result;
				System.out.printf("%3d", num[i]); // 3칸 공백(각 숫자의 간격)

			}
			System.out.println();

		}

	}

}
